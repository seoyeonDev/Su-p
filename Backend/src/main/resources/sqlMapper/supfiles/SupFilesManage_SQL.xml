<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.example.studyproject.files.SupFilesDao">
	
	<!-- 파일 정보 불러오기 맵 -->
	<resultMap type="HashMap" id="FileMap">
		<result property="fileName" column="file_name"/>
		<result property="fileExt" column="file_ext"/>
	</resultMap>
	
	<!-- 파일 테이블 추가 -->
	<select id="insertFiles">
		INSERT INTO supfiles(
			file_seq,
			file_id,
			file_name, 
			file_ext, 
			ins_id, 
			ins_date
			)
		VALUES (
			nextval('seq_files'),
			#{file_id},
			#{file_name},
			#{file_ext},
			#{ins_id},
			#{ins_date}
		);
	</select>
	
	<!-- 파일 테이블 정보 불러오기 -->
	<select id="getFile" parameterType="HashMap" resultMap="FileMap">
		SELECT
			file_name,
			file_ext
		FROM supfiles
		WHERE file_id = #{fileId}
	</select>
	
	<delete id="delFile" parameterType="HashMap">
		DELETE
		FROM supfiles
		WHERE file_id = #{fileId}
	</delete>

</mapper>